<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_100"
    android:layout_height="@dimen/dp_100"
    android:background="@drawable/video_group_speaker_square_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_root"
    xmlns:tools="http://schemas.android.com/tools">
<!--    android:background="@drawable/video_group_speaker_square_bg"-->
        <com.netease.lava.nertc.sdk.video.NERtcVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_nickname_bottom"
        android:background="@drawable/video_group_speaker_bg"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_height="@dimen/dp_21">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv"
            android:layout_marginLeft="4dp"
            tools:background="@drawable/voice_off"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv"
            tools:text="昵称昵称昵称昵称"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>