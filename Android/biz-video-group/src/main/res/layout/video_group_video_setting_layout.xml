<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl_resolution"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:background="@android:color/holo_green_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:text="分辨率"
            android:textColor="#222222"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_80"
            tools:text="1920*1080"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16" />
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/video_group_icon_arrow_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </FrameLayout>
    <View
        android:background="@color/video_group_line_color"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <FrameLayout
        android:id="@+id/rl_fps"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:background="@android:color/holo_green_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:text="帧率"
            android:textColor="#222222"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_fps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_80"
            tools:text="30"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/video_group_icon_arrow_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </FrameLayout>
    <View
        android:background="@color/video_group_line_color"
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
</LinearLayout>