<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/checked_color" />
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/checked_color" android:width="1dp" />
            <solid android:color="@android:color/white" />
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
        </shape>
    </item>
</selector>